<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">#004ecb</item>
        <item name="colorAccent">#FF4081</item>

        <item name="android:textSize">12dp</item>

        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Colored</item>


    </style>

    <style name="TopText" parent="android:style/Theme">
        <item name="android:background">@color/secondaryLightColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">30sp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Title" parent="android:style/Theme">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text" parent="android:style/Theme">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="button" parent="android:style/Theme">
        <item name="android:buttonStyle">@android:style/Widget.Button</item>
        <item name="android:background">#90caf9</item>
        <item name="android:textColor">#004ecb</item>
        <item name="android:textSize">20dp</item>
    </style>



</resources>